@model IEnumerable<BLL.ViewModels.CategoryItemViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@Html.Partial("_NavBar")
<h2>Категории</h2>
<p>
    @Html.ActionLink("Новый", "Add", "Category", null, htmlAttributes: new { @class = "btn btn-primary", @style = "color:white" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NameRecipeCategory)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsPublished)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameRecipeCategory)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsPublished)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Remove", new { id=item.Id })*@
            @Html.ActionLink("Править", "Edit", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-warning", @style = "line-height:1; margin-bottom:5px;" })
            @Html.ActionLink("Детали", "Details", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-success", @style = "line-height:1; margin-bottom:5px;" })
            @Html.ActionLink("Удалить", "Remove", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-danger", @style = "line-height:1; margin-bottom:5px;" })
        </td>
    </tr>
}

</table>
